{
  "name": "scv-buster",
  "version": "0.1.0",
  "description": "Debian Buster development baseline container",
  "main": "index.js",
  "directories": {
    "src": "src",
    "test": "test"
  },
  "dependencies": {
    "log-instance": "^0.2.6",
    "merkle-json": "^2.0.0"
  },
  "devDependencies": {},
  "scripts": {
    "build": "scripts/build",
    "test": "npm run test:verbose",
    "test:test": "mocha -w -R min --inline-diffs -g TEST './@(src|test)/**/*.js'",
    "test:verbose": "mocha --inline-diffs",
    "test:watch": "mocha -w --inline-diffs"
  },
  "repository": {
    "tag": "git"
  },
  "bin": {},
  "keywords": [
    "SuttaCentral",
    "SuttaCentral Voice",
    "EBT",
    "Voice",
    "Buddha",
    "Pali",
    "translation",
    "Javascript",
    "bilara-data",
    "Bilara"
  ],
  "author": "Karl Lew",
  "homepage": "https://github.com/sc-voice/scv-buster",
  "license": "MIT",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
